<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_all">

    <fragment
        android:id="@+id/nav_all"
        android:name="com.gdev.guestsmvvm.view.AllGuestsFragment"
        android:label="@string/menu_all_guests"
        tools:layout="@layout/fragment_all_guests" >
        <argument
            android:name="GUEST_FILTER_KEY"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/nav_presents"
        android:name="com.gdev.guestsmvvm.view.AllGuestsFragment"
        android:label="@string/menu_presents_guests"
        tools:layout="@layout/fragment_all_guests" >
        <argument
            android:name="GUEST_FILTER_KEY"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/nav_absents"
        android:name="com.gdev.guestsmvvm.view.AllGuestsFragment"
        android:label="@string/menu_absents_guests"
        tools:layout="@layout/fragment_all_guests">
        <argument
            android:name="GUEST_FILTER_KEY"
            android:defaultValue="2"
            app:argType="integer" />
    </fragment>
</navigation>